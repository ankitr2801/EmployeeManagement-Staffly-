@using EmployeeManangement.Application.ViewModels.Role;
@model RoleEditToViewModel;


@{

    ViewData["Title"] = "Role Edit";
};
<div class="content-body">
    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit Role</h4>
                        <div class="basic-form">
                            <form method="post" asp-controller="Role" asp-action="Edit">
                                <div class="form-group">
                                    <label class="form-label  fw-bold "> Role Name</label>
                                    <input type="text" class="form-control " asp-for="Name" placeholder="Enter Your Role Name" />
                                    <span asp-validation-for="Name" style="color:red"></span>
                                </div>
                                <button type="submit" class="btn btn-dark">Edit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


